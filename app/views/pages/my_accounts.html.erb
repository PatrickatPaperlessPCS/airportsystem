<p id="notice"><%= notice %></p>

<h3 class="padding1">Your Aircraft Accounts</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Registration #</th>
      <th>Balance</th>
      <th>Last Payment Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.registration %></td>
        <td><%= number_to_currency(account.balance) %></td>
        <td><%= account.last_payment_date %></td>
        <td><%= link_to 'View Account Details', account %></td>
        <td><%= link_to 'Edit Account Information', edit_account_path(account) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<center>
Signed in as: <%= current_user.email %>
</center>