                    <%= image_tag(("ccfees.jpg"), class:"img-responsive")%>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-b -->
    <div class="content-section-a">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Painless inventory tracking</h2>
                    <p class="lead">Enter your inventory into our platform once and it's automatically updated as items are sold - making tracking inventory quick and easy...  Whether it's 100LL or XL T-shirts!</p>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <%= image_tag(("stockroom.jpg"), class:"img-responsive", height: '75%' )%>
