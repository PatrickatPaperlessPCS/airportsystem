<p id="notice"><%= notice %></p>

<h2 class="padding1">Your Automatic Transactions</h2>

<table class="table">
  <thead>
    <tr>
      <th>Account</th>
      <th>Description</th>
      <th>Secondary description</th>
      <th>Total</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @automated_transactions.each do |automated_transaction| %>
      <tr>
        <td><%= automated_transaction.registration %></td>
        <td><%= automated_transaction.description %></td>
        <td><%= automated_transaction.long_description %></td>
        <td><%= automated_transaction.total %></td>
        <td><%= automated_transaction.status %></td>
        <td><%= link_to 'View', automated_transaction %></td>
        <td><%= link_to 'Cancel Automated Transaction', automated_transaction, method: :delete, data: { confirm: 'Are you sure? The associated account will no longer be charged for this transaction' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<center>
<%= button_to('Create a new Automatic Recurring Transaction', new_automated_transaction_path, method: :get, class: 'btn btn-primary') %>
</center>