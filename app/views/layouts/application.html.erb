      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a href='/pages/index'><%= image_tag 'airportap.png', class:"navbar-brand navbar-image", height: '100', width: '120'%></a>
      <ul class="nav navbar-nav">
               <ul class="nav navbar-nav navbar-right">
                  <li><%= link_to "My Accounts", pages_my_accounts_path %></li>
                  <li><%= link_to "Edit My Profile", edit_user_registration_path %></li>
                  <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
                </ul>
          </div>
        </div>
      </nav>
<% end %>
<body>
<%= yield %>
