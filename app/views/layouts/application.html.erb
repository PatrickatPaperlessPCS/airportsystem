<!DOCTYPE html>
<html>
<head>
  <title>Airport Autopilot</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<% if airport_signed_in? %>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a href='/pages/index'><%= image_tag 'airportap.png', class:"navbar-brand navbar-image", height: '100', width: '120'%></a>
      <ul class="nav navbar-nav">
                <li><%= link_to "Invoices", new_invoice_path %> </li>
                <li><%= link_to "Accounts", accounts_path %></li>
                <li><%= link_to "Inventory", inventories_path %></li>
                <li><%= link_to "Recurring Transactions", automated_transactions_path %> </li>
            </ul>
               <ul class="nav navbar-nav navbar-right">
                   <li><%= link_to "Edit My Profile", edit_airport_registration_path %></li>
                   <li><%= link_to "Sign Out", destroy_airport_session_path, :method => :delete %></li>
      <!--              <li><%= link_to "Connect To Quickbooks", quickbooks_authorizations_new_path %></li>
       -->         </ul>
          </div>
        </div>
      </nav>
<% end %>
<% if user_signed_in? %>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a href='/pages/index'><%= image_tag 'airportap.png', class:"navbar-brand navbar-image", height: '100', width: '120'%></a>
      <ul class="nav navbar-nav">
               <ul class="nav navbar-nav navbar-right">
                   <li><%= link_to "Edit My Profile", edit_user_registration_path %></li>
                   <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
                </ul>
          </div>
        </div>
      </nav>
<% end %>
<body>
<%= yield %>
</body>
</html>
