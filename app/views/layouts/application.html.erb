  <%= csrf_meta_tags %>
</head>
<% if airport_signed_in? %>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a href='/pages/index'><%= image_tag 'airportap.png', class:"navbar-brand navbar-image", height: '100', width: '120'%></a>
<ul class="nav navbar-nav">
          <li><%= link_to "Manual Invoices", invoices_path %> </li>
          <li><%= link_to "Customer Accounts", accounts_path %></li>
          <li><%= link_to "Inventory", inventories_path %></li>
          <li><%= link_to "Automated Transactions", automated_transactions_path %> </li>
      </ul>
         <ul class="nav navbar-nav navbar-right">
             <li><%= link_to "Sign Out", destroy_airport_session_path, :method => :delete %></li>
         </ul>
    </div>
  </div>
